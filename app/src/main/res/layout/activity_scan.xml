<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_scan"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.icemobile.barcoders.ScanActivity">

    <TextView
        android:id="@+id/scan_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:background="#746BF5"
        android:text="Please scan three products"
        android:padding="10dp"/>

    <fragment class="zxing.library.ZXingFragment"
              android:id="@+id/scanner"
              android:layout_width="match_parent" android:layout_height="match_parent" />

</LinearLayout>
